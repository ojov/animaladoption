<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" styleClass="background" prefWidth="550.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.LoginController">

    <Separator styleClass=""/>

    <!-- Login Form -->
    <Label text="Login" styleClass="heading" VBox.vgrow="NEVER"/>
    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Username:" styleClass="label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="username" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Email:" styleClass="label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="email" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Manager ID:" styleClass="label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="managerId" GridPane.rowIndex="2" GridPane.columnIndex="1">
            <GridPane.margin>
                <Insets top="5"/>
            </GridPane.margin>
        </TextField>
    </GridPane>

    <Button text="Login" onAction="#handleLogin" styleClass="button"/>
    <Button text="Exit" onAction="#handleLogout" styleClass="button"/>
</VBox>
